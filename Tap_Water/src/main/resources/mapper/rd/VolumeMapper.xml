<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhibang.mapper.rd.VolumeMapper">

    <!--RD：表册-->
    <resultMap id="volume" type="com.zhibang.model.RdVolume">
        <id property="ID" column="id"></id>
        <result property="volumeName" column="volumeName"></result>
        <result property="orderIndex" column="orderIndex"></result>
        <result property="remark" column="remark"></result>
        <result property="disabled" column="disabled"></result>

        <association property="AreaID" javaType="SyArea">
            <id property="ID" column="id"></id>
            <result property="AreaName" column="areaName"></result>
            <result property="Remark" column="remark"></result>
            <result property="Disabled" column="disabled"></result>
        </association>

    </resultMap>
    <!--查询所有表册信息-->
    <select id="QueryAllVolume" resultMap="volume">
        SELECT * FROM  `tap_water`.`rd_volume`
    </select>
</mapper>